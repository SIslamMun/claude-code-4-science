# Warpio Configuration Template
# Copy this file to .env and customize for your setup

# =============================================================================
# LOCAL AI CONFIGURATION
# =============================================================================

# Primary Local AI Provider (ollama, lmstudio, or none)
LOCAL_AI_PROVIDER=lmstudio

# LM Studio Configuration
LMSTUDIO_API_URL=http://192.168.86.20:1234/v1
LMSTUDIO_MODEL=qwen3-4b-instruct-2507
LMSTUDIO_API_KEY=lm-studio

# Ollama Configuration  
OLLAMA_API_URL=http://localhost:11434/v1
OLLAMA_MODEL=qwen3-4b-thinking-2507:latest
OLLAMA_API_KEY=

# Fallback to cloud if local AI unavailable (true/false)
ENABLE_CLOUD_FALLBACK=false

# =============================================================================
# CLOUD AI CONFIGURATION (Optional)
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Google AI
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro

# =============================================================================
# ZEN-MCP CONFIGURATION
# =============================================================================

# Zen-MCP will use the LM Studio configuration above
# No additional configuration needed - it reads LMSTUDIO_* variables


# =============================================================================
# WARPIO CONFIGURATION
# =============================================================================

# Warpio Mode
WARPIO_MODE=orchestration
WARPIO_PROVIDER=claude
WARPIO_VERSION=1.0.0

# Branding
WARPIO_BRAND=Warpio
WARPIO_DOMAIN=iowarp.ai

# =============================================================================
# SCIENTIFIC COMPUTING
# =============================================================================

# Default HPC Cluster (if applicable)
HPC_CLUSTER_NAME=
HPC_PARTITION=compute
HPC_ACCOUNT=

# Default Data Paths
DATA_INPUT_DIR=./data/input
DATA_OUTPUT_DIR=./data/output
DATA_SCRATCH_DIR=/tmp/warpio-scratch

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable verbose logging
WARPIO_DEBUG=false

# Enable reproducibility logging (tracks expert orchestration, MCP usage)
# WARPIO_LOG=true
# WARPIO_LOG_DIR=./.warpio-logs

# Custom MCP timeout (milliseconds)
MCP_TIMEOUT=30000

# Workflow directory
WORKFLOW_DIR=/tmp/warpio-workflows