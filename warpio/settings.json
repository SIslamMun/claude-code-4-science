{
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [{
      "matcher": "startup|resume|clear",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PROJECT_DIR}/warpio/hooks/SessionStart/warpio-init.sh"
      }]
    }],
    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PROJECT_DIR}/warpio/hooks/SubagentStop/expert-result-logger.py",
        "timeout": 5
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PROJECT_DIR}/warpio/hooks/Stop/session-summary-logger.py",
        "timeout": 10
      }]
    }],
    "PreCompact": [{
      "matcher": "manual|auto",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PROJECT_DIR}/warpio/hooks/PreCompact/workflow-checkpoint.py",
        "timeout": 5
      }]
    }]
  },
  "statusLine": {
    "type": "command",
    "command": "${CLAUDE_PROJECT_DIR}/.claude/statusline/warpio-status.sh"
  },
  "permissions": {
    "allow": [
      "Task",
      "Bash(sbatch:*)",
      "Bash(srun:*)",
      "Bash(h5dump:*)",
      "Bash(ncdump:*)",
      "Bash(mpirun:*)",
      "Bash(curl:*http://localhost:*)",
      "Bash(uvx:*)",
      "Bash(uv:*)",
      "mcp__*"
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "WARPIO_VERSION": "4.0.0",
    "WARPIO_ENABLED": "true",
    "WARPIO_SUBAGENT_MCP_ACCESS": "true"
  }
}