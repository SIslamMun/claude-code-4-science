{
  "mcpServers": {
    "zen": {
      "command": "bash",
      "args": ["-c", "[ -f .env ] && export $(grep -v '^#' .env | xargs) 2>/dev/null; exec uvx --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git zen-mcp-server"],
      "env": {
        "CUSTOM_API_URL": "${CUSTOM_API_URL}",
        "CUSTOM_API_KEY": "${CUSTOM_API_KEY}",
        "CUSTOM_MODEL_NAME": "${CUSTOM_MODEL_NAME}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
        "ZEN_ENABLE_DEBUG": "${ZEN_ENABLE_DEBUG:-true}",
        "ZEN_ENABLE_CHAT": "${ZEN_ENABLE_CHAT:-true}",
        "ZEN_ENABLE_CODEREVIEW": "${ZEN_ENABLE_CODEREVIEW:-true}",
        "ZEN_ENABLE_ANALYZE": "${ZEN_ENABLE_ANALYZE:-true}",
        "ZEN_MODEL_STRATEGY": "${ZEN_MODEL_STRATEGY:-local-first}",
        "ZEN_MAX_TOKENS": "${ZEN_MAX_TOKENS:-2000}",
        "ZEN_TEMPERATURE": "${ZEN_TEMPERATURE:-0.7}",
        "ZEN_TIMEOUT": "${ZEN_TIMEOUT:-30}"
      },
      "description": "Multi-model AI orchestration with dynamic provider configuration"
    },
    "hdf5": {
      "command": "uvx",
      "args": ["iowarp-hdf5-mcp"],
      "env": {},
      "description": "HDF5 file operations - hierarchical data structure inspection and manipulation"
    },
    "adios": {
      "command": "uvx",
      "args": ["iowarp-adios-mcp"],
      "env": {},
      "description": "ADIOS2 framework for scientific simulation data access"
    },
    "darshan": {
      "command": "uvx",
      "args": ["iowarp-darshan-mcp"],
      "env": {},
      "description": "HPC application I/O performance analysis and bottleneck identification"
    },
    "slurm": {
      "command": "uvx",
      "args": ["iowarp-slurm-mcp"],
      "env": {
        "HPC_CLUSTER_NAME": "${HPC_CLUSTER_NAME}",
        "HPC_PARTITION": "${HPC_PARTITION:-compute}",
        "HPC_ACCOUNT": "${HPC_ACCOUNT}"
      },
      "description": "SLURM job submission and HPC resource management"
    },
    "numpy": {
      "command": "uvx",
      "args": ["mcp-server-numpy"],
      "env": {},
      "description": "NumPy operations for scientific computing"
    },
    "pandas": {
      "command": "uvx",
      "args": ["mcp-server-pandas"],
      "env": {},
      "description": "Pandas data analysis and manipulation"
    },
    "arxiv": {
      "command": "uvx",
      "args": ["arxiv-mcp-server"],
      "env": {},
      "description": "ArXiv paper search and retrieval for research"
    },
    "filesystem": {
      "command": "uvx",
      "args": ["mcp-server-filesystem"],
      "env": {
        "DATA_INPUT_DIR": "${DATA_INPUT_DIR:-./data/input}",
        "DATA_OUTPUT_DIR": "${DATA_OUTPUT_DIR:-./data/output}"
      },
      "description": "Enhanced filesystem operations for scientific data"
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"],
      "env": {},
      "description": "Git operations for reproducible research"
    }
  }
}