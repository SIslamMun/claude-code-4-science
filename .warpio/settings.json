{
  "hooks": {
    "SessionStart": [{
      "matcher": "startup",
      "hooks": [{
        "type": "command",
        "command": ".claude/hooks/SessionStart/warpio-init.sh"
      }]
    }],
    "PreToolUse": [{
      "matcher": "Bash|Task",
      "hooks": [{
        "type": "command",
        "command": ".claude/hooks/PreToolUse/task-logger.py"
      }]
    }],
    "PostToolUse": [{
      "matcher": "Write|Edit",
      "hooks": [{
        "type": "command",
        "command": ".claude/hooks/PostToolUse/performance-tracker.py"
      }]
    }],
    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": ".claude/hooks/SubagentStop/result-aggregator.py"
      }]
    }]
  },
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline/warpio-status.sh"
  },
  "permissions": {
    "allow": [
      "Bash(sbatch:*)",
      "Bash(srun:*)",
      "Bash(h5dump:*)",
      "Bash(ncdump:*)",
      "Bash(mpirun:*)",
      "Bash(curl:*http://localhost:*)",
      "Bash(uvx:*)",
      "Bash(uv:*)",
      "mcp__*"
    ]
  },
  "mcpConfig": ".claude/mcp-configs/warpio-mcps.json"
}